.login-box-body
  %p.login-box-msg= t('views.session.message')
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group.has-feedback
      = f.text_field :email, autofocus: true, placeholder: t('views.session.email'), class: 'form-control'
      %span.fa.fa-user.form-control-feedback

    .form-group.has-feedback
      = f.password_field :password, autocomplete: 'off', placeholder: t('views.session.password'), class: 'form-control'
      %span.fa.fa-lock.form-control-feedback

    .form-group.text-right
      %button.btn.btn-primary.btn-flat{:type => 'submit'}= t('views.session.sign_in')

  = render "devise/shared/links"
