= bootstrap_nested_form_for @region, layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-5' do |f|
  = f.alert_message t 'views.forms.alert_message'

  = f.text_field :name
  = f.collection_select :country_id, Country.all, :id, :name

  = f.form_group do
    = f.submit t('resources.save'), class: 'btn btn-primary'
